.ssw-reward-tab-ico svg {
  fill: #fff;
  stroke: none;
}

#ssw-widget-recommends-html {
  color: #000;
  padding: 4px 10px;
}

span.ssw-user-avatar.ssw-avatar-icon.ssw-img-circle {
    color: #000;
}

i.ssw-icon-angle-down {
  font-size: 14px;
}

a.ssw-reward-load-more-link {
    font-size: 0;
}
a.ssw-reward-load-more-link:before {
  content: 'Voir plus';  
  font-size: 14px;
}

i.ssw-icon-star > svg, i.ssw-icon-star-empty > svg {
  stroke: var(--gw_review_rating_color, #f7b604);
}

i.ssw-referral-notification__form-icon > svg > g {
  fill: #000 !important;
}

.ssw-referral-notification {
  width: 430px;
  max-width: 430px;
}

.ssw-reward-notification__input-btn {
  max-width: 125px;
  font-size: 14px;
}

.ssw-reward-notification.ssw-referral-notification.ssw-reward-notification-theme-show {
  top: 50%; 
  left: 50%;
  transform: translate(-50%,-50%);
}

.gw-container .gw-btn-bg.gw-review-btn {
  background: #fff;
  border: 1px solid #CB132D;
  color: #CB132D;
}

span.ssw-reviews-count {
  margin-left: 4px;
}