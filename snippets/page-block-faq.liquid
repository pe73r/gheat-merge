{%- liquid
	assign disabled_by_yoast_seo = true
	if content_for_header contains 'yoast-active-script'
		assign disabled_by_yoast_seo = false
	endif
-%}
<div class="page-width page-width--faq" {% if disabled_by_yoast_seo %}itemscope{% endif %} {% if disabled_by_yoast_seo %}itemprop="mainEntity"{% endif %} {% if disabled_by_yoast_seo %}itemtype="https://schema.org/Question"{% endif %}>
  <button type="button"
    class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height"
    aria-controls="FAQ-content-{{ block.id }}">
    <span class="collapsible-trigger__layout">
      <span>
        <span {% if disabled_by_yoast_seo %}itemprop="name"{% endif %}>{{ block.settings.title }}</span>
      </span>
      {%- render 'collapsible-icons' -%}
    </span>
  </button>
  <div id="FAQ-content-{{ block.id }}" class="collapsible-content collapsible-content--all" {% if disabled_by_yoast_seo %}itemscope{% endif %} {% if disabled_by_yoast_seo %}itemprop="acceptedAnswer"{% endif %} {% if disabled_by_yoast_seo %}itemtype="https://schema.org/Answer"{% endif %}>
    <div class="collapsible-content__inner rte" {% if disabled_by_yoast_seo %}itemprop="text"{% endif %}>
      {{ block.settings.text }}
    </div>
  </div>
</div>
